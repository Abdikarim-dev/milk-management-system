generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @default(autoincrement())
  fullname    String
  username    String        @unique
  email       String?       @unique
  password    String
  phone       String        @unique
  sex         Sex
  userType    UserType
  image       String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  Transaction Transaction[]
  activeUsers ActiveUser[]
  level       level[]
}

model Transaction {
  id         Int      @id @default(autoincrement())
  litre      Decimal
  price      Float
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  MilkTank   MilkTank @relation(fields: [milkTankId], references: [id])
  milkTankId Int
  createdAt  DateTime @default(now())
  // updatedAt  DateTime @updatedAt
}

model MilkTank {
  id          Int           @id @default(autoincrement())
  desc        String?
  quantity    Decimal
  limit       Decimal?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  Transaction Transaction[]
}

model ActiveUser {
  id     Int  @id
  user   User @relation(fields: [userId], references: [id])
  userId Int
}

model level {
  id        Int      @id @default(autoincrement())
  Warning   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}

enum Sex {
  male
  female
}

enum MaritalStatus {
  single
  married
  divorced
  widowed
}

enum UserType {
  admin
  user
}
